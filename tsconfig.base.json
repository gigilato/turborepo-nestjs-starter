{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "composite": true,
    "incremental": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2021",
    "baseUrl": "./",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false
  },
  "exclude": ["packages/**/tests/**", "packages/**/dist/**"],
  "references": [
    { "path": "./workspaces/apps/*" },
    { "path": "./workspaces/libs/*" },
    { "path": "./workspaces/configs/*" }
  ]
}
